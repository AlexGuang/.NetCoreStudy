
@model StudentManagement.ViewModels.HomeDetailsViewModel
@{
 
    ViewBag.Title = "学生信息";

}

    
    <div class="row justify-content-center m-3">
        <div class = "col-sm-8">
            <div class="card">
                <div class="card-header">
                        <h1>@Model.Student.Name</h1>
                </div>                  
                
                <div class="card-body text-center">
                    <img class= "card-img-top" src="~/images/yuan1.png" />
                    <h4>学生ID：@Model.Student.Id</h4>
                    <h4>邮箱：@Model.Student.Email</h4>
                    <h4>班级名称：@Model.Student.ClassName</h4>
                </div>
                <div class="card-footer text-center">
                 
                    <a asp-action="index" asp-controller="home" class="btn alert-primary">返回</a>
                    <a href="#" class="btn alert-primary">编辑</a>
                    <a href="#" class="btn alert-danger">删除</a>
                </div>
            </div>
        </div>
    </div>

       @section Scripts{
            <script src ="~/js/CustomScript.js"></script>
       }